{
  "name": "mailsender-send-email",
  "version": "1.0.0",
  "description": "Send emails via MailerSend API.",
  "inputs": {
    "to": {
      "type": "string",
      "description": "Recipient email address.",
      "required": true
    },
    "subject": {
      "type": "string",
      "description": "Email subject line.",
      "required": true
    },
    "text": {
      "type": "string",
      "description": "Plain text content of the email.",
      "required": true
    },
    "html": {
      "type": "string",
      "description": "Optional HTML content.",
      "required": false
    }
  },
  "outputs": {
    "status": {
      "type": "string",
      "enum": ["success", "error"],
      "description": "Result of the operation."
    },
    "message_id": {
      "type": "string",
      "description": "ID of the sent email."
    }
  }
}
